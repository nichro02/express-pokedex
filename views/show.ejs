<h1>Pokemon Info</h1>
<img src="<%=image%>" alt ="Picture of Pokemon">
<h3>Name</h3>
<p><%=name%></p>
<h3>Type</h3>
<ul>
    <%type.forEach(type => {%>
        <li><%=type.type.name%></li>
    <%})%>
</ul>
<h3>Height</h3>
<p><%=height%></p>
<h3>Weight</h3>
<p><%=weight%></p>
<h3>Stats
    <ul>
        <%stats.forEach(stat => {%>
            <li><%=stat.stat.name%>: <%=stat.base_stat%> </li>
        <%})%>
    </ul>
</h3>
<h3>Moves</h3>
<ul>
    <%if(moves.length >= 10) { %>
        <%for(let i=0; i < 10; i++) { %>
            <li><%=moves[i].move.name%></li> 
        <%}%>
    <% } else { %>
        <%moves.forEach(move => {%>
            <li><%=move.move.name%></li>
        <%})%>
    <%}%>
</ul>    

<h4>Abilities</h4>
<ul>
    <%abilities.forEach(ability => {%>
        <li><%=ability.ability.name%></li>
    <%})%>
</ul>

<form method="GET" action="/pokemon">
    <button class="btn btn-primary" type="submit">Go to Favorites</button>
</form>

<form method="GET" action="/">
    <button class="btn btn-primary" type="submit">Go to Pokedex</button>
</form>